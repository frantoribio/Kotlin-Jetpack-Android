<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="es.joseluisgs.jetpacktutorial">

    <!-- Permisos de la apliacion Internet para Retrofit -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".FilmApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.FilmApp">
        <activity android:name=".views.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.DetailActivity"/>
    </application>

</manifest>